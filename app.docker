FROM php:7-fpm

RUN apt-get update && apt-get install -y libmcrypt-dev mysql-client && docker-php-ext-configure mcrypt && docker-php-ext-install mcrypt pdo_mysql

COPY composer.lock composer.json /var/www/

COPY .env.example /var/www

WORKDIR /var/www

RUN cp .env.example .env

RUN php artisan key:generate

RUN composer install