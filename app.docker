FROM php:7-fpm

RUN apt-get update && apt-get install -y mysql-client && docker-php-ext-install mbstring pdo_mysql openssl xml tokenizer

COPY composer.lock composer.json /var/www/

COPY .env.example /var/www

WORKDIR /var/www

RUN cp .env.example .env

RUN php artisan key:generate

RUN composer install